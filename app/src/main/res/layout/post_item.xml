<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textViewPost"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <!--        android:layout_above="@+id/textViewLike" -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/label_like"
        android:id="@+id/textViewLike"
        android:layout_below="@id/textViewPost"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        style="bold"
        android:textColor="#ffcccccc" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="0"
        android:id="@+id/textViewLikeTotal"
        android:layout_marginLeft="5dp"
        android:layout_below="@id/textViewPost"
        android:layout_toRightOf="@+id/textViewLike"
        android:layout_toEndOf="@+id/textViewLike" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/label_dislike"
        android:id="@+id/textViewDislike"
        android:layout_below="@id/textViewPost"
        android:layout_toRightOf="@+id/textViewLikeTotal"
        android:layout_toEndOf="@+id/textViewLikeTotal"
        android:layout_marginLeft="20dp"
        android:textColor="#ffcccccc" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="-0"
        android:layout_marginLeft="5dp"
        android:id="@+id/textViewDislikeTotal"
        android:layout_below="@id/textViewPost"
        android:layout_toRightOf="@+id/textViewDislike"
        android:layout_toEndOf="@+id/textViewDislike" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="hogehog@ikaika.com"
        android:id="@+id/textViewOwner"
        android:layout_below="@+id/textViewPost"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>